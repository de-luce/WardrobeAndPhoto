/* pages/wardrobe/wardrobe.wxss */
.wardrobe-container {
  padding: 24rpx;
  min-height: 100vh;
  background: 
    radial-gradient(ellipse at top, rgba(102, 126, 234, 0.05), transparent 50%),
    linear-gradient(180deg, #f0f2f5 0%, #e8ebef 50%, #ffffff 100%);
  position: relative;
}

.wardrobe-container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 30%, rgba(102, 126, 234, 0.03), transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(118, 75, 162, 0.03), transparent 50%);
  pointer-events: none;
  z-index: 0;
}

.header {
  margin-bottom: 32rpx;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 48rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  /* 多层阴影实现立体效果 */
  box-shadow: 
    0 12rpx 24rpx rgba(102, 126, 234, 0.4),
    0 6rpx 12rpx rgba(102, 126, 234, 0.3),
    0 2rpx 6rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.add-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.add-btn:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 8rpx 16rpx rgba(102, 126, 234, 0.3),
    0 4rpx 8rpx rgba(102, 126, 234, 0.2),
    0 2rpx 4rpx rgba(0, 0, 0, 0.15);
}

.add-icon {
  font-size: 52rpx;
  margin-right: 12rpx;
  font-weight: 300;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.wardrobe-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 28rpx;
  padding: 8rpx 0;
  /* 添加透视效果 */
  perspective: 1200rpx;
}

.wardrobe-item {
  display: flex;
  flex-direction: column;
  border-radius: 24rpx;
  overflow: hidden;
  background: #fff;
  position: relative;
  /* 更强的立体阴影效果 */
  box-shadow: 
    0 16rpx 32rpx rgba(0, 0, 0, 0.15),
    0 8rpx 16rpx rgba(0, 0, 0, 0.12),
    0 4rpx 8rpx rgba(0, 0, 0, 0.1),
    0 2rpx 4rpx rgba(0, 0, 0, 0.08),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.9),
    inset 0 -1rpx 2rpx rgba(0, 0, 0, 0.05);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  /* 添加边框高光 */
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
}

/* 已完成状态的卡片 */
.wardrobe-item.completed {
  opacity: 0.7;
  border-left: 6rpx solid #4cd964;
}

.wardrobe-item.completed .item-image {
  filter: grayscale(0.3) brightness(0.95);
}

/* 已完成状态的卡片 */
.wardrobe-item.completed {
  opacity: 0.7;
  border-left: 6rpx solid #4cd964;
}

.wardrobe-item.completed .item-image {
  filter: grayscale(0.3) brightness(0.95);
}

.wardrobe-item:active {
  transform: scale(0.97) translateY(4rpx);
  box-shadow: 
    0 8rpx 16rpx rgba(0, 0, 0, 0.2),
    0 4rpx 8rpx rgba(0, 0, 0, 0.15),
    0 2rpx 4rpx rgba(0, 0, 0, 0.12),
    inset 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 图片容器 */
.item-image-wrapper {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 133.33%; /* 3/4 = 0.75 * 100% ≈ 133.33% */
  overflow: hidden;
  background: #f5f5f5;
}

.item-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* 图片占位符 */
.image-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  z-index: 1;
}

.placeholder-icon {
  font-size: 80rpx;
  opacity: 0.3;
  margin-bottom: 16rpx;
}

.placeholder-text {
  font-size: 24rpx;
  color: #999;
  opacity: 0.6;
}


/* 信息区域 - 在图片下方 */
.item-info {
  padding: 20rpx 24rpx;
  background: #fff;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
  /* 底部圆角 */
  border-radius: 0 0 22rpx 22rpx;
  transition: background-color 0.3s ease;
}

.wardrobe-item:active .item-info {
  background: #fafafa;
}

.item-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  width: 100%;
}

.item-name {
  color: #333;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1.5;
  flex: 1;
  /* 单行溢出处理 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 0.3rpx;
}

.wardrobe-item.completed .item-name {
  color: #999;
  text-decoration: line-through;
}

.item-right-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.item-date {
  color: #999;
  font-size: 22rpx;
  font-weight: 400;
  line-height: 1.5;
  letter-spacing: 0.2rpx;
}

/* 完成标记徽章 */
.complete-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width: 56rpx;
  height: 56rpx;
  background: #4cd964;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  box-shadow: 
    0 4rpx 12rpx rgba(76, 217, 100, 0.4),
    0 2rpx 6rpx rgba(76, 217, 100, 0.3);
  border: 3rpx solid #fff;
}

.complete-icon {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

/* 完成复选框 */
.complete-checkbox {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44rpx;
  height: 44rpx;
  flex-shrink: 0;
}

.checkbox-inner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #ddd;
  border-radius: 8rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 
    0 2rpx 4rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.checkbox-inner.checked {
  background: #4cd964;
  border-color: #4cd964;
  box-shadow: 
    0 2rpx 8rpx rgba(76, 217, 100, 0.4),
    0 1rpx 4rpx rgba(76, 217, 100, 0.3),
    inset 0 1rpx 2rpx rgba(255, 255, 255, 0.3);
}

.checkbox-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 1;
}

/* 操作按钮区域 */
.item-actions {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  display: flex;
  gap: 8rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 10;
}

.wardrobe-item:active .item-actions {
  opacity: 1;
}

.action-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  font-size: 36rpx;
  box-shadow: 
    0 4rpx 8rpx rgba(0, 0, 0, 0.15),
    0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.action-icon:active {
  transform: scale(0.9);
}

.delete-icon {
  background: rgba(255, 59, 48, 0.95);
}

.empty-state {
  grid-column: 1 / -1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 28rpx;
  overflow: hidden;
  transform: scale(0.9) translateY(50rpx);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  /* 立体效果 */
  box-shadow: 
    0 24rpx 48rpx rgba(0, 0, 0, 0.2),
    0 12rpx 24rpx rgba(0, 0, 0, 0.15),
    0 6rpx 12rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.modal.show .modal-content {
  transform: scale(1) translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
}

.upload-options {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 30rpx;
}

.upload-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 20rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
  /* 立体效果 */
  box-shadow: 
    0 8rpx 16rpx rgba(0, 0, 0, 0.08),
    0 4rpx 8rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  position: relative;
  overflow: hidden;
}

.upload-option::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
  transition: left 0.5s ease;
}

.upload-option:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 
    0 4rpx 8rpx rgba(0, 0, 0, 0.1),
    0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  border-color: #667eea;
  background: linear-gradient(135deg, #f0f4ff 0%, #ffffff 100%);
}

.upload-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  /* 立体效果 */
  box-shadow: 
    0 8rpx 16rpx rgba(102, 126, 234, 0.3),
    0 4rpx 8rpx rgba(102, 126, 234, 0.2),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.1),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
  position: relative;
}

.upload-icon-wrapper::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60%;
  height: 60%;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.4), transparent);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.upload-icon {
  font-size: 60rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.upload-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
}

.tip {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

