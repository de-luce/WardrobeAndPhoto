/* pages/wardrobe/wardrobe.wxss */
.wardrobe-container {
  padding: 24rpx;
  min-height: 100vh;
  background: 
    radial-gradient(ellipse at top, rgba(102, 126, 234, 0.05), transparent 50%),
    linear-gradient(180deg, #f0f2f5 0%, #e8ebef 50%, #ffffff 100%);
  position: relative;
}

.wardrobe-container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 30%, rgba(102, 126, 234, 0.03), transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(118, 75, 162, 0.03), transparent 50%);
  pointer-events: none;
  z-index: 0;
}

.header {
  margin-bottom: 32rpx;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 48rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  /* 多层阴影实现立体效果 */
  box-shadow: 
    0 12rpx 24rpx rgba(102, 126, 234, 0.4),
    0 6rpx 12rpx rgba(102, 126, 234, 0.3),
    0 2rpx 6rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.add-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.add-btn:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 8rpx 16rpx rgba(102, 126, 234, 0.3),
    0 4rpx 8rpx rgba(102, 126, 234, 0.2),
    0 2rpx 4rpx rgba(0, 0, 0, 0.15);
}

.add-icon {
  font-size: 52rpx;
  margin-right: 12rpx;
  font-weight: 300;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.wardrobe-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 28rpx;
  padding: 8rpx 0;
  /* 添加透视效果 */
  perspective: 1200rpx;
}

.wardrobe-item {
  position: relative;
  aspect-ratio: 3/4;
  border-radius: 24rpx;
  overflow: hidden;
  background: #fff;
  /* 更强的立体阴影效果 */
  box-shadow: 
    0 16rpx 32rpx rgba(0, 0, 0, 0.15),
    0 8rpx 16rpx rgba(0, 0, 0, 0.12),
    0 4rpx 8rpx rgba(0, 0, 0, 0.1),
    0 2rpx 4rpx rgba(0, 0, 0, 0.08),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.9),
    inset 0 -1rpx 2rpx rgba(0, 0, 0, 0.05);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  /* 3D 变换效果 */
  transform-style: preserve-3d;
  perspective: 1000rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  /* 添加边框高光 */
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
}

.wardrobe-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 30%;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.6), transparent);
  z-index: 1;
  pointer-events: none;
  border-radius: 24rpx 24rpx 0 0;
}

.wardrobe-item:active {
  transform: scale(0.95) translateY(6rpx) rotateX(2deg);
  box-shadow: 
    0 8rpx 16rpx rgba(0, 0, 0, 0.2),
    0 4rpx 8rpx rgba(0, 0, 0, 0.15),
    0 2rpx 4rpx rgba(0, 0, 0, 0.12),
    inset 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.item-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 0;
  /* 添加图片深度感 */
  filter: brightness(1.02) contrast(1.05);
}

.wardrobe-item:active .item-image {
  transform: scale(1.08) translateZ(10rpx);
  filter: brightness(0.95) contrast(1.1);
}

.item-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, 
    rgba(0, 0, 0, 0.9) 0%,
    rgba(0, 0, 0, 0.7) 40%,
    rgba(0, 0, 0, 0.4) 70%,
    transparent 100%);
  padding: 28rpx 24rpx;
  opacity: 0;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(8rpx) saturate(1.2);
  z-index: 2;
  /* 添加边框高光 */
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.wardrobe-item:active .item-mask {
  opacity: 1;
  transform: translateZ(5rpx);
}

.item-title {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.item-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(12rpx) saturate(1.5);
  border-radius: 12rpx;
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.3),
    0 2rpx 6rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.4),
    inset 0 -1rpx 2rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  transition: all 0.3s ease;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

.action-btn:active {
  transform: scale(0.95) translateY(1rpx);
  box-shadow: 
    0 2rpx 6rpx rgba(0, 0, 0, 0.25),
    inset 0 1rpx 0 rgba(0, 0, 0, 0.1);
}

.delete-btn {
  background: linear-gradient(135deg, rgba(255, 59, 48, 0.95), rgba(255, 80, 70, 0.9));
  box-shadow: 
    0 4rpx 12rpx rgba(255, 59, 48, 0.5),
    0 2rpx 6rpx rgba(255, 59, 48, 0.4),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3),
    inset 0 -1rpx 2rpx rgba(0, 0, 0, 0.2);
  border-color: rgba(255, 59, 48, 0.6);
}

.empty-state {
  grid-column: 1 / -1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 28rpx;
  overflow: hidden;
  transform: scale(0.9) translateY(50rpx);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  /* 立体效果 */
  box-shadow: 
    0 24rpx 48rpx rgba(0, 0, 0, 0.2),
    0 12rpx 24rpx rgba(0, 0, 0, 0.15),
    0 6rpx 12rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.modal.show .modal-content {
  transform: scale(1) translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
}

.upload-options {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 30rpx;
}

.upload-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 20rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
  /* 立体效果 */
  box-shadow: 
    0 8rpx 16rpx rgba(0, 0, 0, 0.08),
    0 4rpx 8rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  position: relative;
  overflow: hidden;
}

.upload-option::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
  transition: left 0.5s ease;
}

.upload-option:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 
    0 4rpx 8rpx rgba(0, 0, 0, 0.1),
    0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  border-color: #667eea;
  background: linear-gradient(135deg, #f0f4ff 0%, #ffffff 100%);
}

.upload-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  /* 立体效果 */
  box-shadow: 
    0 8rpx 16rpx rgba(102, 126, 234, 0.3),
    0 4rpx 8rpx rgba(102, 126, 234, 0.2),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.1),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
  position: relative;
}

.upload-icon-wrapper::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60%;
  height: 60%;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.4), transparent);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.upload-icon {
  font-size: 60rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.upload-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
}

.tip {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

