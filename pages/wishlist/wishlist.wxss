/* pages/wishlist/wishlist.wxss */
.wishlist-container {
  padding: 24rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f2f5 0%, #ffffff 100%);
}

.header {
  margin-bottom: 24rpx;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 48rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 
    0 12rpx 24rpx rgba(79, 172, 254, 0.4),
    0 6rpx 12rpx rgba(79, 172, 254, 0.3),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
}

.add-icon {
  font-size: 48rpx;
  margin-right: 10rpx;
  font-weight: 300;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.08),
    0 2rpx 6rpx rgba(0, 0, 0, 0.04);
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
  position: relative;
}

.filter-item.active {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
  font-weight: 600;
  box-shadow: 
    0 4rpx 8rpx rgba(79, 172, 254, 0.3),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
}

.filter-count {
  background: rgba(0, 0, 0, 0.1);
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  min-width: 32rpx;
  text-align: center;
}

.filter-item.active .filter-count {
  background: rgba(255, 255, 255, 0.3);
}

.wishlist-content {
  padding-bottom: 40rpx;
}

.wish-item {
  display: flex;
  align-items: flex-start;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.08),
    0 2rpx 6rpx rgba(0, 0, 0, 0.04);
  border-left: 4rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}

.wish-item.completed {
  background: #f8f9fa;
  border-left-color: #4facfe;
}

.wish-item:active {
  transform: scale(0.98);
  box-shadow: 
    0 2rpx 8rpx rgba(0, 0, 0, 0.1),
    0 1rpx 4rpx rgba(0, 0, 0, 0.06);
}

.item-checkbox {
  margin-right: 20rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.checkbox-circle {
  width: 44rpx;
  height: 44rpx;
  border: 3rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  background: #fff;
  box-shadow: 
    0 2rpx 4rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.checkbox-circle.checked {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-color: #4facfe;
  box-shadow: 
    0 4rpx 8rpx rgba(79, 172, 254, 0.3),
    0 2rpx 4rpx rgba(79, 172, 254, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
}

.checkbox-icon {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
  line-height: 1;
}

.item-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-main {
  flex: 1;
}

.item-title-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  line-height: 1.5;
}

.wish-item.completed .item-title {
  text-decoration: line-through;
  color: #999;
}

.item-image-mini {
  width: 64rpx;
  height: 64rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #f5f5f5;
  border: 1rpx solid #eee;
}

.mini-image {
  width: 100%;
  height: 100%;
}

.item-details {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: center;
}

.detail-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.wish-item.completed .detail-item {
  color: #bbb;
}

.detail-item.tag-item {
  background: #f0f4ff;
  color: #667eea;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.wish-item.completed .detail-item.tag-item {
  background: #f5f5f5;
  color: #bbb;
}

.detail-item.note-item {
  color: #999;
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 300rpx;
}

.item-delete {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.item-delete:active {
  background: #fff3f0;
  transform: scale(0.9);
}

.delete-icon {
  font-size: 36rpx;
  opacity: 0.6;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 90%;
  max-width: 700rpx;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transform: scale(0.9) translateY(50rpx);
  transition: transform 0.3s ease;
}

.modal.show .modal-content {
  transform: scale(1) translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.image-upload {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  position: relative;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.upload-icon {
  font-size: 60rpx;
  opacity: 0.5;
}

.upload-text {
  font-size: 26rpx;
  color: #999;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
  margin-top: 20rpx;
}

