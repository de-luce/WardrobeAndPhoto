/* pages/photos/photos.wxss */
.photos-container {
  padding: 24rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f2f5 0%, #e8ebef 50%, #ffffff 100%);
  position: relative;
}

.photos-container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 30%, rgba(240, 147, 251, 0.03), transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(245, 87, 108, 0.03), transparent 50%);
  pointer-events: none;
  z-index: 0;
}

.header {
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 48rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 
    0 12rpx 24rpx rgba(245, 87, 108, 0.4),
    0 6rpx 12rpx rgba(245, 87, 108, 0.3),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
}

.add-icon {
  font-size: 48rpx;
  margin-right: 12rpx;
  font-weight: 300;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 拍立得照片墙容器 */
.photos-wall-container {
  position: relative;
  width: 100%;
  height: calc(100vh - 200rpx);
  min-height: 600rpx;
  z-index: 1;
}

/* 滑动视图 */
.photos-swiper {
  width: 100%;
  height: 100%;
}

.swiper-item-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

/* 叠加容器 */
.stack-container {
  position: relative;
  width: calc((100vw - 80rpx) * 0.8);
  max-width: 544rpx;
  height: calc((100vw - 80rpx) * 1.0);
  max-height: 680rpx;
  perspective: 1000rpx;
}

/* 拍立得照片卡片 */
.polaroid-item {
  position: relative;
  width: calc((100vw - 80rpx) * 0.8);
  max-width: 544rpx;
  background: #fff;
  padding: 20rpx 20rpx 60rpx;
  box-shadow: 
    0 12rpx 24rpx rgba(0, 0, 0, 0.15),
    0 6rpx 12rpx rgba(0, 0, 0, 0.1),
    0 2rpx 6rpx rgba(0, 0, 0, 0.08);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  /* 拍立得白色边框效果 */
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  overflow: visible;
}

/* 叠加照片 */
.stack-item {
  position: absolute;
  top: 50%;
  left: 50%;
  transform-origin: center center;
  will-change: transform;
}

.stack-item.current {
  transform: translate(-50%, -50%);
}

.stack-item.behind {
  pointer-events: none;
  transform: translate(-50%, -50%);
}

.polaroid-item:active {
  transform: scale(0.98) rotate(0deg) !important;
  box-shadow: 
    0 6rpx 12rpx rgba(0, 0, 0, 0.2),
    0 3rpx 6rpx rgba(0, 0, 0, 0.15);
}

.stack-item.current:active {
  transform: translate(-50%, -50%) scale(0.98) !important;
}

/* 照片区域 */
.polaroid-photo {
  width: 100%;
  aspect-ratio: 4/5;
  overflow: visible;
  background: #f5f5f5;
  cursor: pointer;
  transition: transform 0.3s ease;
  position: relative;
  padding: 10rpx;
  /* 图片周围阴影效果 */
  box-shadow: 
    0 8rpx 20rpx rgba(0, 0, 0, 0.12),
    0 4rpx 10rpx rgba(0, 0, 0, 0.08),
    0 2rpx 6rpx rgba(0, 0, 0, 0.06);
}

.polaroid-item:active .polaroid-photo {
  transform: scale(1.02);
  box-shadow: 
    0 12rpx 28rpx rgba(0, 0, 0, 0.15),
    0 6rpx 14rpx rgba(0, 0, 0, 0.1),
    0 3rpx 8rpx rgba(0, 0, 0, 0.08);
}

.polaroid-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  border-radius: 2rpx;
  /* 图片本身也有轻微阴影，增强立体感 */
  box-shadow: 
    0 2rpx 8rpx rgba(0, 0, 0, 0.12),
    0 1rpx 4rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

/* 底部标签区域（拍立得特色） */
.polaroid-label {
  margin-top: 20rpx;
  padding: 16rpx 0 12rpx;
  text-align: center;
  position: relative;
  /* 顶部阴影，与图片区域分隔 */
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.06),
    0 2rpx 6rpx rgba(0, 0, 0, 0.04),
    inset 0 2rpx 4rpx rgba(0, 0, 0, 0.02);
  /* 顶部边框高光 */
  border-top: 2rpx solid rgba(0, 0, 0, 0.08);
  background: linear-gradient(to bottom, 
    rgba(255, 255, 255, 0.98) 0%,
    rgba(255, 255, 255, 1) 100%);
}

.label-text {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1.4;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.label-date {
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 1.4;
  display: block;
}

/* 操作按钮 */
.polaroid-actions {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  display: flex;
  gap: 8rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 10;
}

.polaroid-item:active .polaroid-actions {
  opacity: 1;
}

.action-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  font-size: 36rpx;
  box-shadow: 
    0 4rpx 8rpx rgba(0, 0, 0, 0.15),
    0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.action-icon:active {
  transform: scale(0.9);
}

.delete-icon {
  background: rgba(255, 59, 48, 0.95);
}

.empty-state {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 照片指示器 */
.photo-indicator {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  z-index: 100;
}

.indicator-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 500;
}

