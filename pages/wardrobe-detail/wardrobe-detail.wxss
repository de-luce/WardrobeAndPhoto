/* pages/wardrobe-detail/wardrobe-detail.wxss */
.detail-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f2f5 0%, #ffffff 100%);
}

.image-section {
  position: relative;
  width: 100%;
  background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
  overflow: hidden;
  /* 底部阴影 */
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.detail-image {
  width: 100%;
  display: block;
}

.image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent);
  text-align: center;
}

.preview-hint {
  color: #fff;
  font-size: 24rpx;
  opacity: 0.9;
}

.info-section {
  padding: 40rpx 30rpx;
  background: #fff;
  margin: 20rpx;
  border-radius: 24rpx;
  /* 立体效果 */
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.08),
    0 4rpx 12rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.info-item {
  margin-bottom: 40rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.info-value {
  display: block;
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
}

.info-value.link {
  color: #667eea;
  text-decoration: underline;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  /* 立体效果 */
  box-shadow: 
    0 4rpx 12rpx rgba(102, 126, 234, 0.3),
    0 2rpx 6rpx rgba(102, 126, 234, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3),
    inset 0 -1rpx 2rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.action-section {
  padding: 30rpx;
  display: flex;
  gap: 20rpx;
  background: #fff;
  margin: 20rpx;
  border-radius: 24rpx;
  /* 立体效果 */
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.08),
    0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  /* 立体效果 */
  box-shadow: 
    0 8rpx 16rpx rgba(102, 126, 234, 0.3),
    0 4rpx 8rpx rgba(102, 126, 234, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3),
    inset 0 -1rpx 2rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.edit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 4rpx 8rpx rgba(102, 126, 234, 0.25),
    0 2rpx 4rpx rgba(102, 126, 234, 0.15);
}

.delete-btn {
  background: linear-gradient(135deg, #fff3f0 0%, #ffeaea 100%);
  color: #ff3b30;
  border: 2rpx solid #ff3b30;
  /* 立体效果 */
  box-shadow: 
    0 8rpx 16rpx rgba(255, 59, 48, 0.15),
    0 4rpx 8rpx rgba(255, 59, 48, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.5);
}

.delete-btn:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 4rpx 8rpx rgba(255, 59, 48, 0.12),
    0 2rpx 4rpx rgba(255, 59, 48, 0.08);
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 28rpx;
  overflow: hidden;
  transform: scale(0.9) translateY(50rpx);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  /* 立体效果 */
  box-shadow: 
    0 24rpx 48rpx rgba(0, 0, 0, 0.2),
    0 12rpx 24rpx rgba(0, 0, 0, 0.15),
    0 6rpx 12rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.modal.show .modal-content {
  transform: scale(1) translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  font-size: 28rpx;
  border: 1rpx solid #e9ecef;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-top: 20rpx;
  /* 立体效果 */
  box-shadow: 
    0 8rpx 16rpx rgba(102, 126, 234, 0.3),
    0 4rpx 8rpx rgba(102, 126, 234, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3),
    inset 0 -1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.save-btn:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 4rpx 8rpx rgba(102, 126, 234, 0.25),
    0 2rpx 4rpx rgba(102, 126, 234, 0.15);
}

